<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".BillGenerator">

        <!-- Toolbar inside AppBarLayout -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Create New Bill"
                />
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Main Content Layout -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/bill_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/name_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Name"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/village_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Village/Town/City Name"
                android:inputType="text"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/phone_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Phone Number"
                android:inputType="phone"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/rate_gold_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Rate of Gold"
                android:inputType="numberDecimal"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/rate_silver_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Rate of Silver"
                android:inputType="numberDecimal"
                android:textSize="25sp" />

            <!-- RecyclerView and Add Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/item_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/add_button_new_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:textSize="25sp"
                    android:background="@drawable/custom_button"/>
            </LinearLayout>

            <Button
                android:layout_marginTop="5dp"
                android:id="@+id/generate_bill_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate Bill"
                android:textSize="25sp"
                android:background="@drawable/custom_button"/>

            <TextView
                android:id="@+id/total_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>